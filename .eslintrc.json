{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
      "@typescript-eslint"
  ],
  "env": {"node": true, "mocha": true},
  "rules": {
      "@typescript-eslint/naming-convention": "warn",
      "@typescript-eslint/semi": "warn",
      "curly": "warn",
      "eqeqeq": "warn",
      "no-throw-literal": "warn",
      "semi": "off"
  }
}
