{
  "name": "one-vscode",
  "displayName": "one-vscode",
  "description": "ONE for VSCode",
  "version": "0.0.1",
  "publisher": "Samsung",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind ": "workspace",
  "activationEvents": [
    "onCommand:onevscode.build",
    "onCommand:onevscode.import",
    "onCommand:onevscode.json-tracer",
    "onCommand:onevscode.configuration-settings",
    "onCommand:onevscode.toggle-codelens",
    "onCommand:onevscode.circle-tracer",
    "onCustomEditor:cfg.editor",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ONE-Views",
          "title": "ONE",
          "icon": "media/icon/viewContainer.svg"
        }
      ]
    },
    "views": {
      "ONE-Views": [
        {
          "id": "OneExplorerView",
          "name": "ONE Explorer"
        },
        {
          "id": "CompilerToolchainView",
          "name": "Compiler Toolchain"
        },
        {
          "id": "TargetDeviceView",
          "name": "Target Devices"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "cfg.editor",
        "displayName": "Cfg Editor",
        "selector": [
          {
            "filenamePattern": "*.cfg"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "onevscode.refresh-one-explorer",
        "title": "Refresh",
        "category": "ONE",
        "icon": "$(refresh)"
      },
      {
        "command": "onevscode.flip-cfg-to-gui",
        "title": "Open cfg in GUI",
        "category": "ONE",
        "icon": "$(go-to-file)"
      },
      {
        "command": "onevscode.flip-cfg-to-ini",
        "title": "Open cfg in Text Editor",
        "category": "ONE",
        "icon": "$(go-to-file)"
      },
      {
        "command": "onevscode.show-compile-webview",
        "title": "Compile",
        "category": "ONE",
        "_comment": "Call this when compiling compilable model(e.g., *.tflite, *.onnx, etc.)"
      },
      {
        "command": "onevscode.run-cfg",
        "title": "Run",
        "category": "ONE"
      },
      {
        "command": "onevscode.refresh-compiler",
        "title": "Refresh",
        "category": "ONE",
        "icon": "$(refresh)"
      },
      {
        "command": "onevscode.install-compiler",
        "title": "Install",
        "category": "ONE",
        "icon": "$(desktop-download)"
      },
      {
        "command": "onevscode.register-device",
        "title": "Register",
        "category": "ONE",
        "icon": "$(add)"
      },
      {
        "command": "onevscode.build",
        "title": "build",
        "category": "ONE"
      },
      {
        "command": "onevscode.import",
        "title": "cfg import",
        "category": "ONE"
      },
      {
        "command": "onevscode.json-tracer",
        "title": "json tracer",
        "category": "ONE"
      },
      {
        "command": "onevscode.configuration-settings",
        "title": "configuration-settings",
        "category": "ONE"
      },
      {
        "command": "onevscode.toggle-codelens",
        "title": "toggle codelens",
        "category": "ONE"
      },
      {
        "command": "onevscode.circle-tracer",
        "title": "circle tracer",
        "category": "ONE"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "onevscode.show-compile-webview",
          "when": "resourceExtname in onevscode.compilableExtList || resourcePath in onevscode.compilableDirList"
        }
      ],
      "view/title": [
        {
          "command": "onevscode.refresh-one-explorer",
          "when": "view == OneExplorerView",
          "group": "navigation"
        },
        {
          "command": "onevscode.refresh-compiler",
          "when": "view == CompilerToolchainView",
          "group": "navigation"
        },
        {
          "command": "onevscode.install-compiler",
          "when": "view == CompilerToolchainView",
          "group": "navigation"
        },
        {
          "command": "onevscode.register-device",
          "when": "view == TargetDevice",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "onevscode.run-cfg",
          "when": "view == OneExplorerView && resourceExtname == .cfg",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "onevscode.flip-cfg-to-gui",
          "group": "navigation",
          "when": "resourceExtname == .cfg && !cfg.editor"
        },
        {
          "command": "onevscode.flip-cfg-to-ini",
          "group": "navigation",
          "when": "resourceExtname == .cfg && cfg.editor"
        }
      ]
    },
    "configuration": {
      "title": "ONE",
      "properties": {
        "one-vscode.enableCodelens": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "languages": [
      {
        "id": "ini",
        "aliases": [
          "Configuration"
        ],
        "extensions": [
          ".cfg"
        ]
      }
    ],
    "snippets": [
      {
        "language": "ini",
        "path": "./src/Snippets/one-build.json"
      },
      {
        "language": "ini",
        "path": "./src/Snippets/onecc.json"
      },
      {
        "language": "ini",
        "path": "./src/Snippets/tools.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint && npm run lintjs && npm run lintcss && npm run linthtml",
    "lint": "eslint src --ext ts --max-warnings 0",
    "lintjs": "eslint media --ext js --max-warnings 0",
    "lintcss": "csslint media src",
    "linthtml": "htmlhint media src",
    "unittest": "node ./out/Tests/runTest.js",
    "test": "npm run unittest",
    "test-no-screen": "DISPLAY=:44 xvfb-run --server-num 44 npm run test",
    "clean": "rm -rf out"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "@vscode/test-electron": "^2.1.3",
    "chai": "^4.3.6",
    "csslint": "^1.0.5",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "htmlhint": "^1.1.3",
    "license-checker": "^25.0.1",
    "mocha": "^9.2.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.1.2",
    "vsce": "^2.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Samsung/ONE-vscode.git"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.29",
    "@vscode/webview-ui-toolkit": "^0.9.3",
    "configparser": "^0.3.9",
    "flatbuffers": "^2.0.3",
    "ini": "^2.0.0",
    "which": "^2.0.2"
  }
}
