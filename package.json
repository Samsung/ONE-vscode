{
  "name": "one-vscode",
  "displayName": "one-vscode",
  "description": "ONE for VSCode",
  "version": "0.1.0",
  "publisher": "Samsung",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind ": "workspace",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ONE-Views",
          "title": "ONE",
          "icon": "media/icon/viewContainer.svg"
        }
      ]
    },
    "views": {
      "ONE-Views": [
        {
          "id": "OneExplorerView",
          "name": "ONE Explorer"
        },
        {
          "id": "ToolchainView",
          "name": "Toolchain"
        },
        {
          "id": "TargetDeviceView",
          "name": "Target Devices"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "cfg.editor",
        "displayName": "Cfg Editor",
        "selector": [
          {
            "filenamePattern": "*.cfg"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "onevscode.mondrianViewer",
        "displayName": "Mondrian",
        "selector": [
          {
            "filenamePattern": "*.tracealloc.json"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "onevscode.part-editor",
        "displayName": "ONE Partition Editor",
        "selector": [
          {
            "filenamePattern": "*.part"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "onevscode.refresh-one-explorer",
        "title": "Refresh",
        "category": "ONE",
        "icon": "$(refresh)"
      },
      {
        "command": "onevscode.collapse-all",
        "title": "Collapse Folders in ONE Explorer",
        "category": "ONE",
        "icon": "$(collapse-all)"
      },
      {
        "command": "onevscode.create-cfg",
        "title": "Create new ONE configuration",
        "category": "ONE",
        "icon": "$(add)"
      },
      {
        "command": "onevscode.flip-cfg-to-gui",
        "title": "Open cfg in GUI",
        "category": "ONE",
        "icon": "$(go-to-file)"
      },
      {
        "command": "onevscode.flip-cfg-to-ini",
        "title": "Open cfg in Text Editor",
        "category": "ONE",
        "icon": "$(go-to-file)"
      },
      {
        "command": "onevscode.infer-model",
        "title": "Infer",
        "category": "ONE",
        "_comment": "Run backend executor's inference command with a given model."
      },
      {
        "command": "onevscode.run-cfg",
        "title": "Run",
        "category": "ONE"
      },
      {
        "command": "onevscode.rename-on-oneexplorer",
        "title": "Rename",
        "category": "ONE"
      },
      {
        "command": "onevscode.openContainingFolder",
        "title": "Open Containing Folder",
        "category": "ONE"
      },
      {
        "command": "onevscode.open-cfg-as-text",
        "title": "Open with Text Editor",
        "category": "ONE"
      },
      {
        "command": "onevscode.refresh-toolchain",
        "title": "Refresh",
        "category": "ONE",
        "icon": "$(refresh)"
      },
      {
        "command": "onevscode.install-toolchain",
        "title": "Install",
        "category": "ONE",
        "icon": "$(desktop-download)"
      },
      {
        "command": "onevscode.uninstall-toolchain",
        "title": "Uninstall",
        "category": "ONE",
        "icon": "$(x)"
      },
      {
        "command": "onevscode.devices.connect",
        "title": "Connect to Env",
        "category": "ONE",
        "icon": "$(add)"
      },
      {
        "command": "onevscode.devices.register",
        "title": "Register Executor",
        "category": "ONE",
        "icon": "$(add)"
      },
      {
        "command": "onevscode.build",
        "title": "build",
        "category": "ONE"
      },
      {
        "command": "onevscode.import",
        "title": "cfg import",
        "category": "ONE"
      },
      {
        "command": "onevscode.json-tracer",
        "title": "json tracer",
        "category": "ONE"
      },
      {
        "command": "onevscode.configuration-settings",
        "title": "configuration-settings",
        "category": "ONE"
      },
      {
        "command": "onevscode.toggle-codelens",
        "title": "toggle codelens",
        "category": "ONE"
      },
      {
        "command": "onevscode.circle-tracer",
        "title": "circle tracer",
        "category": "ONE"
      },
      {
        "command": "onevscode.circle-graphview",
        "title": "circle graph view",
        "category": "ONE"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "onevscode.refresh-one-explorer",
          "when": "view == OneExplorerView",
          "group": "navigation"
        },
        {
          "command": "onevscode.collapse-all",
          "when": "view == OneExplorerView",
          "group": "navigation"
        },
        {
          "command": "onevscode.refresh-toolchain",
          "when": "view == ToolchainView",
          "group": "navigation"
        },
        {
          "command": "onevscode.install-toolchain",
          "when": "view == ToolchainView",
          "group": "navigation"
        },
        {
          "command": "onevscode.devices.connect",
          "when": "view == TargetDeviceView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "onevscode.run-cfg",
          "when": "view == OneExplorerView && viewItem == config",
          "group": "navigation"
        },
        {
          "command": "onevscode.rename-on-oneexplorer",
          "when": "view == OneExplorerView && viewItem != directory",
          "group": "navigation"
        },
        {
          "command": "onevscode.openContainingFolder",
          "when": "view == OneExplorerView",
          "group": "navigation"
        },
        {
          "command": "onevscode.open-cfg-as-text",
          "when": "view == OneExplorerView && viewItem == config",
          "group": "navigation"
        },
        {
          "command": "onevscode.create-cfg",
          "when": "view == OneExplorerView && viewItem == baseModel",
          "group": "inline"
        },
        {
          "command": "onevscode.devices.register",
          "when": "view == TargetDeviceView && viewItem == executionEnv",
          "group": "inline"
        },
        {
          "command": "onevscode.uninstall-toolchain",
          "when": "view == ToolchainView && viewItem == toolchain",
          "group": "inline"
        }
      ],
      "editor/title": [
        {
          "command": "onevscode.flip-cfg-to-gui",
          "group": "navigation",
          "when": "resourceExtname == .cfg && !cfg.editor"
        },
        {
          "command": "onevscode.flip-cfg-to-ini",
          "group": "navigation",
          "when": "resourceExtname == .cfg && cfg.editor"
        }
      ]
    },
    "configuration": {
      "title": "ONE",
      "properties": {
        "one-vscode.enableCodelens": {
          "type": "boolean",
          "default": true
        },
        "one-vscode.targetDeviceInfo": {
          "type": ["object", "null"],
          "default": null
        }
      }
    },
    "languages": [
      {
        "id": "ini",
        "aliases": [
          "Configuration"
        ],
        "extensions": [
          ".cfg"
        ]
      }
    ],
    "snippets": [
      {
        "language": "ini",
        "path": "./src/Snippets/one-build.json"
      },
      {
        "language": "ini",
        "path": "./src/Snippets/onecc.json"
      },
      {
        "language": "ini",
        "path": "./src/Snippets/tools.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint && npm run lintjs && npm run lintcss && npm run linthtml",
    "lint": "eslint src --ext ts --max-warnings 0",
    "lintjs": "eslint media --ext js --max-warnings 0",
    "lintcss": "csslint media src --exclude-list=media/CircleGraph/external",
    "linthtml": "htmlhint media src",
    "unittest": "node ./out/Tests/runTest.js",
    "test": "npm run unittest",
    "test-no-screen": "DISPLAY=:44 xvfb-run --server-num 44 npm run test",
    "clean": "rm -rf out"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/glob": "^7.1.3",
    "@types/ini": "^1.3.31",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "@vscode/test-electron": "^2.1.3",
    "chai": "^4.3.6",
    "csslint": "^1.0.5",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "htmlhint": "^1.1.3",
    "license-checker": "^25.0.1",
    "mocha": "^9.2.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.1.2",
    "vsce": "^2.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Samsung/ONE-vscode.git"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.29",
    "@vscode/webview-ui-toolkit": "^0.9.3",
    "configparser": "^0.3.9",
    "flatbuffers": "^2.0.3",
    "ini": "^2.0.0",
    "which": "^2.0.2"
  }
}
