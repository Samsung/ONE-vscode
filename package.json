{
  "name": "one-vscode",
  "displayName": "one-vscode",
  "description": "ONE compiler for VSCode",
  "version": "0.0.1",
  "publisher": "Samsung",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:onevscode.build",
    "onCommand:onevscode.import",
    "onCommand:onevscode.json-tracer",
    "onCommand:onevscode.configuration-settings",
    "onCommand:onevscode.toggle-codelens",
    "onCommand:onevscode.circle-tracer",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ONE-Views",
          "title": "ONE",
          "icon": "media/icon/viewContainer.svg"
        }
      ]
    },
    "views": {
      "ONE-Views": [
        {
          "id": "FileTreeView",
          "name": "Files",
          "contextualTitle": "ONE: Files"
        }
      ]
    },
    "commands": [
      {
        "command": "onevscode.build",
        "title": "build",
        "category": "ONE"
      },
      {
        "command": "onevscode.import",
        "title": "cfg import",
        "category": "ONE"
      },
      {
        "command": "onevscode.json-tracer",
        "title": "json tracer",
        "category": "ONE"
      },
      {
        "command": "onevscode.configuration-settings",
        "title": "configuration-settings",
        "category": "ONE"
      },
      {
        "command": "onevscode.toggle-codelens",
        "title": "toggle codelens",
        "category": "ONE"
      },
      {
        "command": "onevscode.circle-tracer",
        "title": "circle tracer",
        "category": "ONE"
      }
    ],
    "configuration": {
      "title": "ONE",
      "properties": {
        "one-vscode.enableCodelens": {
          "type": "boolean",
          "default": true
        },
        "one-vscode.projectRootDirectory": {
          "type": "string",
          "description": "The directory path where model files are managed.",
          "default": ""
        }
      }
    },
    "languages": [
      {
        "id": "ini",
        "aliases": [
          "Configuration"
        ],
        "extensions": [
          ".cfg"
        ]
      }
    ],
    "snippets": [
      {
        "language": "ini",
        "path": "./src/Snippets/one-build.json"
      },
      {
        "language": "ini",
        "path": "./src/Snippets/onecc.json"
      },
      {
        "language": "ini",
        "path": "./src/Snippets/tools.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint && npm run lintjs && npm run lintcss && npm run linthtml",
    "lint": "eslint src --ext ts",
    "lintjs": "eslint media --ext js",
    "lintcss": "csslint media src",
    "linthtml": "htmlhint media src",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "configparser": "^0.3.9",
    "csslint": "^1.0.5",
    "eslint": "^7.15.0",
    "flatbuffers": "^2.0.3",
    "glob": "^7.1.6",
    "htmlhint": "^0.15.2",
    "ini": "^2.0.0",
    "license-checker": "^25.0.1",
    "mocha": "^9.2.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.1.2",
    "which": "^2.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Samsung/ONE-vscode.git"
  }
}
